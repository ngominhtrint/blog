<style rel="stylesheet">

    div.block_container {
      display: flex;
      justify-content: flex-start;
      padding-bottom: 16px;
    }

    h5 {
      padding-right: 16px;
    }

</style>

<div class="block_container">
  <h5><%= comment.user.email %></h5>
  <div><%= comment.content %></div>
</div>
  <% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>
      <%= link_to 'Edit', edit_article_comment_path(comment.article, comment), class: "btn btn-success" %>
      <%= link_to 'Delete', article_comment_path(comment.article, comment), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
    <% end %>
  <% end %>
<hr>
